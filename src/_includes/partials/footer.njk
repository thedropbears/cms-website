<footer class="bg-primary text-white">
  <div class="container mx-auto px-6 py-8">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Logo and description -->
      <div>
        <h2 class="text-2xl font-bold mb-4">{{ settings.name }}</h2>
        <p class="mt-2">{{ settings.description }}</p>
      </div>
      
      <!-- Navigation -->
      <div>
        <h3 class="text-lg font-semibold mb-4">Navigation</h3>
        <ul class="space-y-2">
          {% for item in navigation.items %}
            <li>
              <a href="{{ item.url }}" class="hover:text-accent transition">{{ item.text }}</a>
            </li>
          {% endfor %}
        </ul>
      </div>
      
      <!-- Quick Links -->
      <div>
        <h3 class="text-lg font-semibold mb-4">Quick Links</h3>
        <ul class="space-y-2">
          {% for link in quicklinks.links %}
            <li>
              <a href="{{ link.url }}" target="_blank" rel="noopener noreferrer" class="hover:text-accent transition">
                {{ link.title }}
              </a>
              {% if link.desc %}
                <p class="text-sm text-gray-300">{{ link.desc }}</p>
              {% endif %}
            </li>
          {% endfor %}
        </ul>
      </div>
    </div>

    <div class="mt-8 pt-8 border-t border-white/20 text-center">
      <p>&copy; {{ settings.name }} {{ page.date.getFullYear() }}. All rights reserved.</p>
    </div>
  </div>
</footer>