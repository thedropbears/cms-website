---
layout: base.njk
---

<div class="container mx-auto px-6 py-8 md:py-12">
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
    <!-- Robot Image -->
    <div>
      {% if image %}
        <img src="{{ image }}" alt="{{ title }}" class="w-full h-auto rounded-lg shadow-md">
      {% endif %}
      
      {% if awards and awards.length %}
        <div class="mt-6 bg-white rounded-lg shadow-md p-6 border border-gray-200">
          <h3 class="text-xl font-bold text-primary mb-4">Awards</h3>
          <ul class="list-disc list-inside text-gray-700 space-y-2">
            {% for award in awards %}
              <li>{{ award }}</li>
            {% endfor %}
          </ul>
        </div>
      {% endif %}
    </div>
    
    <!-- Robot Info -->
    <div>
      <div class="flex items-center mb-4">
        <span class="text-sm font-medium bg-accent text-white px-3 py-1 rounded-full">{{ year }}</span>
        <span class="mx-2 text-gray-400">â€”</span>
        <span class="text-gray-600">{{ gameName }}</span>
      </div>
      
      <h1 class="text-3xl md:text-4xl font-bold text-primary mb-6">{{ title }}</h1>
      
      {% if description %}
        <p class="text-lg text-gray-600 mb-6">{{ description }}</p>
      {% endif %}
      
      <div class="prose prose-lg max-w-none">
        {{ body | portableText | safe }}
      </div>
    </div>
  </div>
</div>