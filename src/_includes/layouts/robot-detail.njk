---
layout: base.njk
---

<div class="container mx-auto px-6 py-8 md:py-12">
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
    <!-- Robot Image -->
    <div>
      <img src="{{ image }}" alt="{{ robotName }}" class="w-full h-auto rounded-lg shadow-md">
      
      {% if awards.length %}
        <div class="mt-6 bg-white rounded-lg shadow-md p-6 border border-gray-200">
          <h3 class="text-xl font-bold text-primary mb-4">Awards</h3>
          <ul class="list-disc list-inside text-gray-700 space-y-2">
            {% for award in awards %}
              <li>{{ award.award }}</li>
            {% endfor %}
          </ul>
        </div>
      {% endif %}
    </div>
    
    <!-- Robot Info -->
    <div>
      <div class="flex items-center mb-4">
        <span class="text-sm font-medium bg-accent text-white px-3 py-1 rounded-full">{{ year }}</span>
        <span class="mx-2 text-gray-400">â€”</span>
        <span class="text-gray-600">{{ gameName }}</span>
      </div>
      
      <h1 class="text-3xl md:text-4xl font-bold text-primary mb-6">{{ robotName }}</h1>
      
      <div class="prose prose-lg max-w-none">
        {{ content | safe }}
      </div>
      
      <div class="mt-8">
        <a href="/robots/" class="inline-flex items-center px-4 py-2 bg-gray-200 text-gray-700 rounded hover:bg-gray-300 transition">
          <i class="ph ph-arrow-left w-4 h-4 mr-2"></i>
          Back to Robots
        </a>
      </div>
    </div>
  </div>
</div> 