---
layout: base.njk
---

<div class="container mx-auto px-6 py-8 md:py-12">
  <h1 class="text-3xl md:text-4xl font-bold text-primary mb-8">Our Sponsors</h1>
  
  <div class="prose prose-lg max-w-none mb-8">
    {{ body | portableText | safe }}
  </div>
  
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    {% for sponsor in sponsors %}
      <div class="bg-white border border-gray-200 rounded-lg shadow-md overflow-hidden p-6 flex flex-col">
        {% if sponsor.logo %}
          <div class="flex items-center justify-center h-48 mb-4">
            <img src="{{ sponsor.logo }}" alt="{{ sponsor.name }}" class="max-w-full h-auto max-h-full">
          </div>
        {% endif %}
        
        <h3 class="text-xl font-bold text-primary mb-2">{{ sponsor.name }}</h3>
        
        {% if sponsor.description %}
          <p class="text-gray-600 mb-4 flex-grow">{{ sponsor.description }}</p>
        {% endif %}
        
        {% if sponsor.url %}
          <a href="{{ sponsor.url }}" target="_blank" rel="noopener noreferrer" 
             class="inline-block bg-primary text-white px-4 py-2 rounded-md hover:bg-primary-dark transition-colors">
            Visit Website
          </a>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>