---
layout: base.njk
---

<div class="container mx-auto px-6 py-8 md:py-12">
  <h1 class="text-3xl md:text-4xl font-bold text-primary mb-8">Team Notices</h1>
  
  <div class="space-y-6">
    {% for notice in notices | sort(true, false, 'publishedAt') %}
      <div class="bg-white border border-gray-200 rounded-lg shadow-md overflow-hidden">
        <div class="p-6">
          <div class="flex items-center justify-between mb-3">
            <h2 class="text-xl font-bold text-primary">
              {{ notice.title }}
            </h2>
            <time class="text-gray-500 text-sm" datetime="{{ notice.publishedAt }}">
              {{ notice.publishedAt | readableDate }}
            </time>
          </div>
          
          {% if notice.image %}
            <img src="{{ notice.image }}" alt="" class="w-full h-48 object-cover rounded-lg mb-4">
          {% endif %}
          
          <div class="prose prose-lg max-w-none">
            {{ notice.body | portableText | safe }}
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</div>