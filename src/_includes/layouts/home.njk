---
layout: base.njk
---

<!-- Hero Section -->
<section class="relative">
  <div class="bg-primary">
    <div class="container mx-auto px-6 py-12 md:py-24">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-center">
        <div class="text-white">
          <h1 class="text-4xl md:text-5xl font-bold mb-4">{{ settings.name }}</h1>
          <p class="text-xl mb-6">{{ settings.description }}</p>
          <div class="flex flex-wrap gap-4">
            <a href="/about/" class="inline-block px-6 py-3 bg-accent text-white font-medium rounded-lg hover:bg-yellow-500 transition">
              About Us
            </a>
            <a href="/join/" class="inline-block px-6 py-3 bg-white text-primary font-medium rounded-lg hover:bg-gray-100 transition">
              Join Our Team
            </a>
          </div>
        </div>
        <div>
          {% if settings.ogImage %}
            <img src="{{ settings.ogImage }}" alt="{{ settings.name }}" class="rounded-lg shadow-lg">
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Latest Robots Section -->
{% if robots.length %}
<section class="py-12 bg-gray-50">
  <div class="container mx-auto px-6">
    <h2 class="text-3xl font-bold text-primary mb-8">Our Latest Robots</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {% for robot in robots | sort(true, false, 'year') | limit(3) %}
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
          {% if robot.mainImage %}
            <img src="{{ robot.mainImage }}" alt="{{ robot.title }}" class="w-full h-48 object-cover">
          {% endif %}
          <div class="p-6">
            <div class="flex items-center mb-2">
              <span class="text-sm font-medium bg-accent text-white px-2 py-1 rounded-full">{{ robot.year }}</span>
              <span class="ml-2 text-gray-600">{{ robot.gameName }}</span>
            </div>
            <h3 class="text-xl font-bold text-primary mb-2">{{ robot.title }}</h3>
            <p class="text-gray-600 mb-4">{{ robot.description }}</p>
            <a href="/robots/{{ robot.slug }}" class="text-primary hover:text-accent">Learn More â†’</a>
          </div>
        </div>
      {% endfor %}
    </div>
    <div class="text-center mt-8">
      <a href="/robots/" class="inline-block px-6 py-3 bg-primary text-white font-medium rounded-lg hover:bg-primary-dark transition">
        View All Robots
      </a>
    </div>
  </div>
</section>
{% endif %}

<!-- Latest Notices Section -->
{% if notices.length %}
<section class="py-12">
  <div class="container mx-auto px-6">
    <h2 class="text-3xl font-bold text-primary mb-8">Latest Notices</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      {% for notice in notices | sort(true, false, 'publishedAt') | limit(4) %}
        <div class="bg-white border border-gray-200 rounded-lg shadow-md p-6">
          <div class="flex justify-between items-start mb-3">
            <h3 class="text-xl font-bold text-primary">{{ notice.title }}</h3>
            <time class="text-sm text-gray-500">{{ notice.publishedAt | readableDate }}</time>
          </div>
          {% if notice.image %}
            <img src="{{ notice.image }}" alt="" class="w-full h-48 object-cover rounded-lg mb-4">
          {% endif %}
          <div class="prose prose-sm">
            {{ notice.body | portableText | safe }}
          </div>
        </div>
      {% endfor %}
    </div>
    <div class="text-center mt-8">
      <a href="/notices/" class="inline-block px-6 py-3 bg-primary text-white font-medium rounded-lg hover:bg-primary-dark transition">
        View All Notices
      </a>
    </div>
  </div>
</section>
{% endif %}

<!-- Sponsors Section -->
{% if sponsors.length %}
<section class="py-12 bg-gray-50">
  <div class="container mx-auto px-6">
    <h2 class="text-3xl font-bold text-primary mb-8 text-center">Our Sponsors</h2>
    <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-6 items-center">
      {% for sponsor in sponsors | limit(6) %}
        <div class="p-4">
          {% if sponsor.logo %}
            <a href="{{ sponsor.url }}" target="_blank" rel="noopener noreferrer">
              <img src="{{ sponsor.logo }}" alt="{{ sponsor.name }}" class="max-h-16 mx-auto">
            </a>
          {% endif %}
        </div>
      {% endfor %}
    </div>
    <div class="text-center mt-8">
      <a href="/sponsors/" class="inline-block px-6 py-3 bg-primary text-white font-medium rounded-lg hover:bg-primary-dark transition">
        View All Sponsors
      </a>
    </div>
  </div>
</section>
{% endif %}

<!-- Team Calendar -->
<section class="py-12 md:py-24">
  <div class="container mx-auto px-6">
    <h2 class="text-3xl font-bold text-primary text-center mb-8">Our Calendar</h2>
    <p class="text-center text-gray-600 max-w-3xl mx-auto mb-12">Stay up to date with team meetings, build sessions, competitions, and outreach events.</p>
    
    <div class="bg-white rounded-lg shadow-lg overflow-hidden">
      <div class="responsive-iframe">
        <iframe src="https://calendar.google.com/calendar/embed?src=thedropbears.org.au_7nar1flo0q3v73nth317l4hnr4%40group.calendar.google.com&ctz=Australia%2FSydney" style="border: 0" width="100%" height="600" frameborder="0" scrolling="no"></iframe>
      </div>
    </div>
  </div>
</section>

<style>
  .responsive-iframe {
    position: relative;
    padding-bottom: 56.25%; /* 16:9 Aspect Ratio */
    height: 0;
    overflow: hidden;
  }
  .responsive-iframe iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: 0;
  }
</style>